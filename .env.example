# Example environment file for A Fugue In Flask
# Copy this file to .env and fill in real values as needed

# Flask configuration
FLASK_APP=app.py
FLASK_CONFIG=development
SECRET_KEY=your-dev-secret-key

# Database configuration
DEV_DATABASE_URI=sqlite:///instance/dev.db
TEST_DATABASE_URI=sqlite:///instance/test.db

# Centralized Database Architecture (Azure SQL)
USE_CENTRALIZED_DB=True
DB_SERVER=your-sql-server.database.windows.net
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=your-db-name

# Direct connection string (optional, for Azure SQL)
DATABASE_URI=mssql+pyodbc://username:password@server/dbname?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes&Encrypt=yes

# Azure Key Vault Configuration (for production)
AZURE_KEY_VAULT_URL=https://your-key-vault-name.vault.azure.net/
